<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--用户-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@drawable/mine_jianbian">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <!--
                        <ImageView
                            android:id="@+id/mine_photo"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/youxiang" />-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mine_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/youxiang" />

            <RelativeLayout
                android:id="@+id/ming_yonghu"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="用户名"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/mine_username"
                        android:layout_width="138dp"
                        android:layout_height="match_parent"
                        android:text="xxxxxxxx"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="23dp"
                    android:src="@drawable/go" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
    <!--
      钱包  等
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_75"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.00元"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的钱包"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_0_1"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0个"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="全部订单"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_0_1"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0条"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="未读消息"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

    </LinearLayout>


    <!--
    四个  条目选项
    -->
    <LinearLayout
        android:id="@+id/mine_ziliao"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_0_5"
        android:layout_marginRight="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_49"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@drawable/mine_ziliao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_65"
                android:gravity="center"
                android:text="个人资料" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="19dp"
                android:src="@drawable/mine_go" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_xihuan"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_0_5"
        android:layout_marginRight="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_49"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@drawable/mine_xihuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_65"
                android:gravity="center"
                android:text="喜欢的店" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_19"
                android:src="@drawable/mine_go" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_youhui"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_0_5"
        android:layout_marginRight="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_49"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@drawable/mine_youhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_65"
                android:gravity="center"
                android:text="优惠券" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_19"
                android:src="@drawable/mine_go" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_shezhi"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_0_5"
        android:layout_marginRight="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_49"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@drawable/mine_shezhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_65"
                android:gravity="center"
                android:text="设置" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_19"
                android:src="@drawable/mine_go" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>